<style>
    span{
        border-radius: 20px;
    }
   button {
    border: none;
   } 

    .burger-menu {
  position: absolute;
  top: 60px;
  left: 6%;
  background-color: transparent;
  
  cursor: pointer;
  z-index: 100;
}

.burger-menu:hover span {
  background-color: var(--pink);
}

.burger-menu span {
  display: block;
  width: 25px;
  height: 1px;
  margin: 7px auto;
  background-color: rgba(0, 0, 0, 0.666);
  /* transition: background-color 0.3s ease; */
}

.menu-container {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 0;
  height: 0;
  overflow: hidden;
  z-index: 99;
}

.menu-items {
  list-style: none;
  margin: 0;
  padding: 0;
  text-align: center;
  width: 100%;
}

.menu-items li {
  margin: 20px;
}

.menu-items li a {
  display: block;
  font-size: 12px;
  text-decoration: none;
  color: var(--text-color);
  text-align: left;
  padding-top: 5px;
  padding-bottom: 5px;
  border-bottom: 1px solid var(--line-grey);
}

.burger-menu.active span:nth-of-type(1) {
  transform: rotate(45deg) translate(9px, 5px);
}

.burger-menu.active span:nth-of-type(2) {
  opacity: 0;
}

.burger-menu.active span:nth-of-type(3) {
  transform: rotate(-45deg) translate(6px, -3px);
}

.menu-container.active {
  width: 100%;
  height: 100%;
  background-color: var(--bg-color);
  display: flex;
  align-items: left;

}

.menu-container.active .menu-items {
  animation: menu-appear 0.5s ease;
}

@keyframes menu-appear {
  from {
    opacity: 0;
    transform: scale(0.5);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.first_item a{
  margin-top: 150px;
}

.small_items a {
margin-top: 50px;
}

@media(min-width:1000px){
    .burger-menu{
        display: none;
    }
}
a. {
   font-family: "aviano-sans";
}
</style>