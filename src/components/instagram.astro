---
import "../CSS/style.css";
---
<section id="insta">
<div class="flexcontainer1">
    <div>
<img class="instaicon" src="/img/icons_instagram.svg" alt="instagram icon">
</div>

<div>
<a class="instatag" href="https://www.instagram.com/omada.wine/" target="_blank">@omada.wine</a>
</div>
</div>

<div class="flexcontainer2">
    <img src="/img/insta/hannah_insta.png" alt="foto af hannah">
    <img src="/img/insta/deli_insta.png" alt="foto af deli">
    <img src="/img/insta/omada_insta.png" alt="foto af omada">
    <img src="/img/insta/2glas_insta.png" alt="foto af to glas">
    <img class="last_img"src="/img/insta/nita_insta.png" alt="foto af nita">
</div>
</section>


<style>
      @media (max-width: 800px) {
        .flexcontainer1 {
            display: flex;
            flex-direction: row;
            align-items: center;
        }

    .flexcontainer2 {
      display: grid;
      grid-template-columns: 1fr 1fr;
    }

    img {
      max-width: 150px;
      margin: 1rem;
    }

    .instatag {
    display: flex;

  }

  .instaicon{
    width: 20px;
    display: grid;
  }

  .last_img{
    display: none;
  }
}


@media (min-width: 800px) {
    .flexcontainer1 {
            display: flex;
            flex-direction: row;
            align-items: center;
        }
.flexcontainer2 {
  display: flex;
  justify-content: flex-start;
}

img {
  max-width: 200px;
  margin: 1rem;
}

.instatag {
    display: flex;

  }

  .instaicon{
    width: 20px;
    display: grid;
  }
}
#insta {
    display: flex;
    flex-direction: column;
    align-items:flex-start;
    justify-content: center;
    margin-top: 4em;
}
  </style>