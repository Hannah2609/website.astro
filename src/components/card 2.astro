---
import "../CSS/style.css";
const { link, navn , pris, billede1, billede2} = Astro.props;
---

<article>
  <a class="produkt_billeder" href={link}>
     
      <img
        class="first_img"
        src={"/img/produkt-billeder/" + billede1 }
        alt="Foto af produkt"
      /> 
      <img
        class="second_img"
        src={"/img/produkt-billeder/" + billede2 }
        alt="Foto af produkt"
      />
  </a>

  <div class="produkt_tekst">
    <p>{navn}</p>
    <p>DKK {pris}</p>
  </div>
</article>

<style>
  .produkt_billeder {
    display: grid;
    place-items: center;

  }
  .first_img {
    grid-area: 1/1;
  }
  .second_img {
    grid-area: 1/1;
    display: none;
    pointer-events: none;
  }
  .first_img:hover + .second_img {
    display: block;
  }

  p {
    margin-top: 1em;
  }

  article {
    margin-bottom: 4em;
  }
  img {
    min-width: 300px;
  }

</style>
